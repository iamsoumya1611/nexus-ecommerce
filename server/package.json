{
  "name": "server",
  "version": "1.0.0",
  "description": "A simple e-commerce platform built with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-frontend": "cd ../client && npm start",
    "dev-all": "concurrently \"npm run dev\" \"npm run dev-frontend\"",
    "build": "node build-client.js",
    "build-client": "node build-client.js",
    "postinstall": "node build-client.js",
    "import-products": "node seeder.js",
    "destroy-products": "node seeder.js -d"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "stripe": "^13.5.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}