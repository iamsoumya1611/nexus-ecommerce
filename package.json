{
  "name": "nexus-ecommerce",
  "version": "1.0.0",
  "description": "A full-featured e-commerce platform built with the MERN stack",
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && node server.js",
    "dev": "cd server && npm run dev",
    "dev-frontend": "cd client && npm start",
    "dev-all": "concurrently \"npm run dev\" \"npm run dev-frontend\"",
    "build-client": "cd server && node build-client.js",
    "postinstall": "cd server && npm run postinstall",
    "import-products": "cd server && npm run import-products",
    "destroy-products": "cd server && npm run destroy-products"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "concurrently": "^9.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamsoumya1611/nexus-ecommerce.git"
  },
  "keywords": [
    "ecommerce",
    "mern",
    "mongodb",
    "express",
    "react",
    "node"
  ],
  "author": "Soumya Majumder",
  "license": "MIT"
}
